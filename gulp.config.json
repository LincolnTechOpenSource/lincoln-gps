{
  "client": "./src/client/",
  "server": "./src/server/",
  "html": "./src/client/**/*.html",
  "htmltemplates": "./src/client/app/**/*.html",
  "sass": "./src/client/content/styles/main.scss",
  "js": [
    "./src/client/app/**/*module*.js",
    "./src/client/app/**/*constants*.js",
    "./src/client/app/**/*.js",
    "!./src/client/app/scripts/**/*.js"
  ],
  "vendorjs": [
    "./bower_components/jquery/dist/jquery.js",
    "./bower_components/ionic/release/js/ionic.bundle.js",
    "./bower_components/ngCordova/dist/ng-cordova.js"
  ],
  "fonts": [
    "./src/client/content/fonts/**/*.*",
    "./bower_components/ionic/release/fonts/*.*"
  ],
  "images": [
    "./src/client/content/images/**/*"
  ],
  "ionic": {
    "sass": "./src/client/content/styles/ionic-styles.scss"
  },
  "data": "./src/server/data/*.json"
}
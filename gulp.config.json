{
  "client": "./src/client/",
  "server": "./src/server/",
  "buildDev": ".dev",
  "build": "www",
  "html": "./src/client/**/*.html",
  "htmltemplates": "./src/client/app/**/*.html",
  "sass": "./src/client/content/styles/main.scss",
  "js": [
    "./src/client/app/**/*module*.js",
    "./src/client/app/**/*constants*.js",
    "./src/client/app/**/*.js"
  ],
  "vendorjs": [
    "./bower_components/jquery/dist/jquery.js",
    "./bower_components/ionic/release/js/ionic.bundle.js",
    "./bower_components/ngCordova/dist/ng-cordova.js",
    "./bower_components/ngstorage/ngStorage.js",
    "./bower_components/svg-pan-zoom/dist/svg-pan-zoom.js",
    "./plugins/**/*.js"
  ],
  "vendorjsBuild": [
    "./bower_components/jquery/dist/jquery.min.js",
    "./bower_components/ionic/release/js/ionic.bundle.min.js",
    "./bower_components/ngCordova/dist/ng-cordova.min.js",
    "./bower_components/ngstorage/ngStorage.min.js",
    "./bower_components/svg-pan-zoom/dist/svg-pan-zoom.min.js",
    "./plugins/**/*.js"
  ],
  "fonts": [
    "./src/client/content/fonts/**/*.*",
    "./bower_components/ionic/release/fonts/*.*"
  ],
  "images": [
    "./src/client/content/images/**/*"
  ],
  "ionic": {
    "sass": "./src/client/content/styles/ionic-styles.scss"
  },
  "data": "./src/server/data/*.json",
  "platoDir": "./reports/plato"
}